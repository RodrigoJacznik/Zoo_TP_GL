<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/animallistactivity_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/animallistactivity_detail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/animallistactivity_photo">

            <TextView
                android:id="@+id/animallistactivity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextMain"/>

            <TextView
                android:id="@+id/animallistactivity_specie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextSecundary"/>

            <View
                android:id="@+id/animaldetailsactivity_color"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/animallistactivity_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
