<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:colorBackground">@color/gray</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="RecyclerViewRow">@style/RowList</item>
    </style>

    <style name="ExtraTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/material_deep_teal_200</item>
        <item name="android:buttonStyle">@style/ExtraButton</item>
        <item name="RecyclerViewRow">@style/RowListExtra</item>
    </style>

    <style name="Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/state_list_button</item>
    </style>

    <style name="ExtraButton">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/state_list_extra_button</item>
    </style>

    <style name="TextMain">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextSecundary">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextSecundary.error">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="RowList">
        <item name="android:background">@drawable/state_list_row</item>
    </style>

    <style name="RowListExtra">
        <item name="android:background">@drawable/state_list_row_extra</item>
    </style>

</resources>
